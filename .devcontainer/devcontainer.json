{
    "name": "Golang (GitHub Codespaces)",
    "build": {
        "dockerfile": "Dockerfile",
        "args": {
            "VARIANT": "1.18"
        }
    },
    "runArgs": [
        "--cap-add=SYS_PTRACE",
        "--security-opt",
        "seccomp=unconfined"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "golang.Go"
            ],
            "settings": {
                "git.autofetch": "all",
                "go.toolsManagement.checkForUpdates": "local",
                "go.useLanguageServer": true,
                "go.gopath": "/go"
            }
        }
    },
    "postCreateCommand": "",
    "remoteUser": "vscode"
}
